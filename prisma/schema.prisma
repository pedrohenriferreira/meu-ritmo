generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  birthdate String?
  gender    String?
  weight    Float?
  height    Float?
  avatar    String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  workouts         Workout[]
  sleepRecords     SleepRecord[]
  moodRecords      MoodRecord[]
  waterIntakes     WaterIntake[]
  mealRecords      MealRecord[]
  transactions     Transaction[]
  goals            Goal[]
  habits           Habit[]
  workoutTypes     WorkoutType[]
  mentalActivities MentalActivityType[]
  categories       TransactionCategory[]

  @@map("users")
}

model WorkoutType {
  id          String    @id @default(cuid())
  userId      String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  category    String
  icon        String?
  defaultUnit String?
  isActive    Boolean   @default(true)
  createdAt   DateTime  @default(now())
  workouts    Workout[]

  @@map("workout_types")
}

model Workout {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  workoutTypeId String
  workoutType   WorkoutType @relation(fields: [workoutTypeId], references: [id])
  duration      Int
  intensity     String?
  calories      Int?
  notes         String?
  date          DateTime
  createdAt     DateTime    @default(now())

  @@map("workouts")
}

model SleepRecord {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  hours     Float
  quality   String
  notes     String?
  date      DateTime
  createdAt DateTime @default(now())

  @@map("sleep_records")
}

model WaterIntake {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  amount    Float
  date      DateTime
  createdAt DateTime @default(now())

  @@map("water_intakes")
}

model MealRecord {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mealType    String
  description String
  calories    Int?
  protein     Float?
  carbs       Float?
  fats        Float?
  date        DateTime
  createdAt   DateTime @default(now())

  @@map("meal_records")
}

model MentalActivityType {
  id           String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  category     String
  icon         String?
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  moodRecords  MoodRecord[]

  @@map("mental_activity_types")
}

model MoodRecord {
  id                   String              @id @default(cuid())
  userId               String
  user                 User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  mood                 String
  stressLevel          Int
  activityId           String?
  activity             MentalActivityType? @relation(fields: [activityId], references: [id])
  activityDuration     Int?
  notes                String?
  date                 DateTime
  createdAt            DateTime            @default(now())

  @@map("mood_records")
}

model TransactionCategory {
  id           String        @id @default(cuid())
  userId       String
  user         User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  name         String
  type         String
  icon         String?
  color        String?
  isActive     Boolean       @default(true)
  createdAt    DateTime      @default(now())
  transactions Transaction[]

  @@map("transaction_categories")
}

model Transaction {
  id          String              @id @default(cuid())
  userId      String
  user        User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  categoryId  String
  category    TransactionCategory @relation(fields: [categoryId], references: [id])
  type        String
  amount      Float
  description String?
  date        DateTime
  createdAt   DateTime            @default(now())

  @@map("transactions")
}

model Goal {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  category    String
  title       String
  description String?
  target      Float
  current     Float    @default(0)
  unit        String
  period      String
  startDate   DateTime
  endDate     DateTime
  status      String   @default("active")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("goals")
}

model Habit {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name        String
  category    String
  frequency   String
  streak      Int      @default(0)
  bestStreak  Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("habits")
}
